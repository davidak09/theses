<p id="notice"><%= notice %></p>

<h1>Listing Theses</h1>

<div class="btn-group">
  <%= link_to 'New Thesis', new_thesis_path, class: 'btn btn-success' %>
</div>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Abstract</th>
    <th>Defended</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @theses.each do |thesis| %>
      <tr>
        <td><%= thesis.title %></td>
        <td><%= thesis.abstract %></td>
        <td><%= thesis.defended %></td>
        <td>
          <%= link_to(thesis, class: 'btn btn-primary') do %>
              <span class="glyphicon glyphicon-eye-open"></span> Show
          <% end %>
          <%= link_to(edit_thesis_path(thesis), class: 'btn btn-warning') do %>
              <span class="glyphicon glyphicon-edit"></span> Edit
          <% end %>
          <%= link_to(thesis, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger') do %>
              <span class="glyphicon glyphicon-trash"></span> Remove
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>